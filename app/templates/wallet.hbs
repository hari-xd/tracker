                <h3>Available balance</h3>
                <button type="button" {{on "click" this.addMoney}}>Add Money</button>
            </div>
            <h1>${{this.amount}}</h1>
        </div>

        <div class="balance-card">
            <div class="balance-card-top">
                <h3>Total Money Crdited</h3>
            </div>
            <h1>$1234</h1>
        </div>
        </div>
    </div>
<div class="wallet-right">
     {{#if this.addMoneyClicked}} 
        <form>
