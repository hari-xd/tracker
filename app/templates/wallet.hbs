{{page-title "Wallet"}}
<div class="wallet-design">
    <div class="designer-line">
        <h1>Your Wallet</h1>
</div>
</div>
<div class="wallet-page">
    <div class="wallet-left">
        <div class="balance-cards">
            <div class="balance-card">
            <div class="balance-card-top">
                <h3>Available balance</h3>
                <button type="button" {{on "click" this.addMoney}}>Add Money</button>
            </div>
            <h1>$ {{this.digiwallet.walletAmount}}</h1>
            {{!-- <h1>${{if (eq this.amount this.model)this.model this.amount }}</h1> --}}
        </div>

        <div class="balance-card">
            <div class="balance-card-top">
                <h3>Total Money Credited</h3>
            </div>
            <h1>$ {{this.digiwallet.totalAmount}}</h1>
        </div>
        </div>
    </div>
<div class="wallet-right" {{on-click-outside this.closeAddMoney exceptSelector=".wallet-page"}}>
     {{#if this.addMoneyClicked}} 
        <form>
        <div class="add-money">
            <h3>Add Money</h3>
            <div class="amount-input">
                <div>
                    <label for="amount">Amount:</label>
            <input type="number" id="amount" placeholder="Enter amount" {{on "input" this.updateAmount}}/>
                </div>
            </div>
            <button type="button" {{on "click" this.submitAmount}}>Add Money</button>
            {{!-- <div class="payment-select">
                <label for="payment-type">Payment Type:</label>
            <select id="payment-type" {{on "change" this.updatePaymentType}}>
                <option value="credit">Credit Card</option>
                <option value="debit">Debit Card</option>
                <option value="upi">UPI</option>
            </select>
            </div> --}}
        </div>
    </form>
     {{/if}} 
    </div>
</div>