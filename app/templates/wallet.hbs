{{page-title "Wallet"}}
<div class="wallet-design">
    <div class="designer-line">
        <h1>Wallet</h1>
</div>
</div>
<div class="wallet-page">
    <div class="wallet-left">
        <div class="balance-cards">
            <div class="balance-card">
